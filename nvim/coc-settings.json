{
  "prettier.singleQuote": true,
  "prettier.tabWidth": 4,
  "eslint.autoFixOnSave": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "hover.floatConfig": {
    "border": true,
    "shadow": true
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
